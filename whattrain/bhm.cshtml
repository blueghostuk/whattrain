@{
    Layout = "~/_Layout.cshtml";
}
<h2>
    <a href="http://www.trainnotifier.co.uk/search/at/BHM" target="_blank" title="View full schedule">Birmingham New Street</a>&nbsp;
    <span class="glyphicon glyphicon-refresh loading" style="display:none; font-size: large;"></span>
</h2>
<div class="row" style="overflow:auto;">
    @Html.Raw(File.ReadAllText(Server.MapPath("~/Content/app/svg/bhm.svg")))
</div>
<div class="row">
    <div class="alert alert-info">Click on an identifier (e.g. 1D56) to view more train details</div>
    <div class="alert alert-info">More stations to be added in due time</div>
</div>
@section js{
    <script type="text/javascript">
        TrainNotifier.Common.stationCode = 'BHM';
    </script>
}